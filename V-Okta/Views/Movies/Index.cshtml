
@{
    ViewData["Title"] = "Index";
}

@model V_Okta.Models.MoviesHomeModel


<div class="row">
    <div class="col-lg-12">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Vote</th>
                    <th>Movie</th>
                    <th>Desciprtion</th>
                    <th>Current Votes</th>
                    <th>Edit Movie</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>
                            @if (movie.UserVote == 1)
                            {
                                <img id="@movie.Id-upvote-image" onclick="upvoteMovie(@movie.Id)" src="~/images/caret-up-fill.svg" />
                            }
                            else
                            {
                                <img id="@movie.Id-upvote-image" onclick="upvoteMovie(@movie.Id)" src="~/images/caret-up.svg" />
                            }

                            @if (movie.UserVote == -1)
                            {
                                <img id="@movie.Id-downvote-image" onclick="downvoteMovie(@movie.Id)" src="~/images/caret-down-fill.svg" />
                            }
                            else
                            {
                                <img id="@movie.Id-downvote-image" onclick="downvoteMovie(@movie.Id)" src="~/images/caret-down.svg" />
                            }

                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.Description</td>
                        <td id="@movie.Id-CurrentVotes">@movie.CurrentVotes</td>
                        <td>
                            <a href="~/Movies/Manage/@movie.Id" class="btn btn-sm btn-primary">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    function upvoteMovie(id) {
        var xhr = $.post("/Movies/UpvoteMovie", { id: id })
            .done(function (data) {
                if (data.success) {
                    $('#' + id + '-CurrentVotes').text(data.currentVotes);

                    if (data.userVote == 0) {
                        $('#' + id + '-upvote-image').prop('src', "/images/caret-up.svg");
                        $('#' + id + '-downvote-image').prop('src', "/images/caret-down.svg");
                    }
                    else {
                        $('#' + id + '-upvote-image').prop('src', "/images/caret-up-fill.svg");
                        $('#' + id + '-downvote-image').prop('src', "/images/caret-down.svg");
                    }
                }
            });
    }


    function downvoteMovie(id) {
        var xhr = $.post("/Movies/DownvoteMovie", { id: id })
            .done(function (data) {
                if (data.success) {
                    $('#' + id + '-CurrentVotes').text(data.currentVotes);

                    if (data.userVote == 0) {
                        $('#' + id + '-downvote-image').prop('src', "/images/caret-down.svg");
                        $('#' + id + '-upvote-image').prop('src', "/images/caret-up.svg");
                    }
                    else {
                        $('#' + id + '-downvote-image').prop('src', "/images/caret-down-fill.svg");
                        $('#' + id + '-upvote-image').prop('src', "/images/caret-up.svg");
                    }
                }
            });
    }
</script>




