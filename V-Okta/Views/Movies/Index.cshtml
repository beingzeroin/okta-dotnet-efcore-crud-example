
@{
    ViewData["Title"] = "Index";
}

@model V_Okta.Models.MoviesHomeModel


<div class="row">
    <div class="col-lg-12">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Vote</th>
                    <th>Movie</th>
                    <th>Desciprtion</th>
                    <th>Current Votes</th>
                    <th>Edit Movie</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>
                            @if (movie.UserVote == 1)
                            {
                                <img src="~/images/caret-up-fill.svg" />
                            }
                            else
                            {
                                <img src="~/images/caret-up.svg" />
                            }

                            @if (movie.UserVote == -1)
                            {
                                <img src="~/images/caret-down-fill.svg" />
                            }
                            else
                            {
                                <img src="~/images/caret-down.svg" />
                            }

                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.Description</td>
                        <td>@movie.CurrentVotes</td>
                        <td>
                            <a href="~/Movies/Manage/@movie.Id" class="btn btn-sm btn-primary">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>




